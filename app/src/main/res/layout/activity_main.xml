<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="#90DCED"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"

        android:layout_width="411dp"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:background="#302C2C"
        android:paddingLeft="5dp"
        android:text="General Calculator"
        android:textColor="#EBECED"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/display1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:background="#ECE8E8"
        android:padding="5dp"
        android:textAlignment="viewEnd"
        android:textColor="#EA11EA"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="50dp" />
    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="#ECE8E8"
        android:padding="5dp"
        android:textAlignment="viewEnd"
        android:textColor="#0C0909"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="120dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        >

        <Button
            android:id="@+id/power"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="^"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />
        <Button
            android:id="@+id/squar"
            android:layout_width="80dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/buttonshape"
            android:text="sqr"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/abc"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="()"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/squarRoot"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="srt"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:layout_marginLeft="9dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        >

        <Button
            android:id="@+id/clear"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="c"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="del"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/parcentage"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="%"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/division"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="/"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:layout_marginLeft="9dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        >

        <Button
            android:id="@+id/seven"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="7"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="8"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="9"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="X"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:layout_marginLeft="9dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        >

        <Button
            android:id="@+id/four"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="4"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/five"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="5"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/six"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="6"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/minus"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="-"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:layout_marginLeft="9dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        >

        <Button
            android:id="@+id/one"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="1"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/two"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="2"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/three"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="3"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="+"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:layout_marginLeft="9dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        >

        <Button
            android:id="@+id/zero"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="0"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/doubleZero"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="00"
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

        <Button
            android:id="@+id/dots"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="."
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />



        <Button
            android:id="@+id/equal"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:text="="
            android:textSize="30sp"
            tools:layout_editor_absoluteY="170dp" />

    </LinearLayout>








</LinearLayout>